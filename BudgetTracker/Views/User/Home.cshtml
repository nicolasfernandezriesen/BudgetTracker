@using Microsoft.AspNetCore.Http

<div class="p-4 text-light text-center">
    <h1> Bienvenido @User.Identity.Name. Que vamos a hacer?</h1>
</div>


<div class="d-flex flex-row justify-content-center align-items-center pt-5">
    <div class="mx-4">
        <form asp-controller="History" class="container" asp-action="GetBillIncomeAndMonthlyTotal" method="get">
            <input type="hidden" name="month" value="@DateTime.Now.Month" />
            <input type="hidden" name="year" value="@DateTime.Now.Year" />
            <button type="submit" class="btn btn-primary">
                <h4>VER HISTORIAL</h4>
            </button>
        </form>
    </div>
    <div class="mx-4">
        <form asp-controller="Bill" class="container" asp-action="Create" method="get">
            <button type="submit" class="btn btn-primary">
                <h4>NUEVO GASTO</h4>
            </button>
        </form>
    </div>
    <div class="mx-4">
        <form asp-controller="Income" class="container" asp-action="Create" method="get">
            <button type="submit" class="btn btn-primary">
                <h4>NUEVO INGRESO</h4>
            </button>
        </form>
    </div>
    <div class="mx-4">
        <form asp-controller="User" class="container" asp-action="Edit" method="get">
            <button type="submit" class="btn btn-primary">
                <h4>CONFIGURACION</h4>
            </button>
        </form>
    </div>
</div>
